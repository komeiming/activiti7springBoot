<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.activiti.mapper.WorkflowTemplateMapper">

    <resultMap id="WorkflowTemplateResultMap" type="com.itheima.activiti.entity.WorkflowTemplate">
        <id property="id" column="id" />
        <result property="tenantId" column="tenant_id" />
        <result property="name" column="name" />
        <result property="description" column="description" />
        <result property="processJson" column="process_json" />
        <result property="status" column="status" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <result property="createdBy" column="created_by" />
        <result property="updatedBy" column="updated_by" />
    </resultMap>

    <!-- 插入工作流模板 -->
    <insert id="insert" parameterType="com.itheima.activiti.entity.WorkflowTemplate">
        INSERT INTO workflow_template (
            id, tenant_id, name, description, process_json, 
            status, created_at, updated_at, created_by, updated_by
        ) VALUES (
            #{id}, #{tenantId}, #{name}, #{description}, #{processJson}, 
            #{status}, #{createdAt}, #{updatedAt}, #{createdBy}, #{updatedBy}
        )
    </insert>

    <!-- 根据ID更新工作流模板 -->
    <update id="updateById" parameterType="com.itheima.activiti.entity.WorkflowTemplate">
        UPDATE workflow_template SET
            tenant_id = #{tenantId},
            name = #{name},
            description = #{description},
            process_json = #{processJson},
            status = #{status},
            updated_at = #{updatedAt},
            created_by = #{createdBy},
            updated_by = #{updatedBy}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除工作流模板 -->
    <delete id="deleteById" parameterType="java.lang.String">
        DELETE FROM workflow_template WHERE id = #{id}
    </delete>

    <!-- 根据条件查询工作流模板列表 -->
    <select id="selectTemplatesByCondition" parameterType="java.util.Map" resultMap="WorkflowTemplateResultMap">
        SELECT * FROM workflow_template
        WHERE 1=1
        <if test="params.tenantId != null and params.tenantId != ''">
            AND tenant_id = #{params.tenantId}
        </if>
        <if test="params.name != null and params.name != ''">
            AND name LIKE CONCAT('%', #{params.name}, '%')
        </if>
        <if test="params.status != null and params.status != ''">
            AND status = #{params.status}
        </if>
        <if test="params.startTime != null">
            AND created_at &gt;= #{params.startTime}
        </if>
        <if test="params.endTime != null">
            AND created_at &lt;= #{params.endTime}
        </if>
        ORDER BY created_at DESC
        <if test="params.page != null and params.size != null">
            LIMIT #{params.size} OFFSET #{params.offset}
        </if>
    </select>

    <!-- 根据条件查询工作流模板总数 -->
    <select id="selectTemplateCountByCondition" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM workflow_template
        WHERE 1=1
        <if test="params.tenantId != null and params.tenantId != ''">
            AND tenant_id = #{params.tenantId}
        </if>
        <if test="params.name != null and params.name != ''">
            AND name LIKE CONCAT('%', #{params.name}, '%')
        </if>
        <if test="params.status != null and params.status != ''">
            AND status = #{params.status}
        </if>
        <if test="params.startTime != null">
            AND created_at &gt;= #{params.startTime}
        </if>
        <if test="params.endTime != null">
            AND created_at &lt;= #{params.endTime}
        </if>
    </select>

    <!-- 根据模板ID查询模板详情 -->
    <select id="selectTemplateById" parameterType="java.lang.String" resultMap="WorkflowTemplateResultMap">
        SELECT * FROM workflow_template WHERE id = #{id}
    </select>

    <!-- 根据租户ID查询模板列表 -->
    <select id="selectTemplatesByTenantId" parameterType="java.lang.String" resultMap="WorkflowTemplateResultMap">
        SELECT * FROM workflow_template WHERE tenant_id = #{tenantId} ORDER BY created_at DESC
    </select>
</mapper>
