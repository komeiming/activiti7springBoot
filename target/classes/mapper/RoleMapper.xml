<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.activiti.mapper.RoleMapper">

    <resultMap id="roleResultMap" type="com.itheima.activiti.entity.SysRole">
        <id property="id" column="id" />
        <result property="roleName" column="name" />
        <result property="roleCode" column="code" />
        <result property="description" column="description" />
    </resultMap>

    <select id="findByRoleCode" resultMap="roleResultMap">
        SELECT * FROM sys_role WHERE code = #{roleCode}
    </select>

    <select id="findById" resultMap="roleResultMap">
        SELECT * FROM sys_role WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="roleResultMap">
        SELECT * FROM sys_role ORDER BY id
    </select>

    <select id="findByUserId" resultMap="roleResultMap">
        SELECT r.* FROM sys_role r
        JOIN sys_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.itheima.activiti.entity.SysRole">
        INSERT INTO sys_role (name, code, description)
        VALUES (#{roleName}, #{roleCode}, #{description})
    </insert>

    <update id="update" parameterType="com.itheima.activiti.entity.SysRole">
        UPDATE sys_role
        SET name = #{roleName},
            code = #{roleCode},
            description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM sys_role WHERE id = #{id}
    </delete>
</mapper>